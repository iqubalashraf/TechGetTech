<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back3">
    <TextView
        android:id="@+id/customerDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer Details"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>
    <Button
        android:id="@+id/acceptJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACCEPT"
        android:layout_below="@id/customerDetails"
        android:layout_marginTop="20dp"
        android:onClick="acceptJob"/>
    <Button
        android:id="@+id/rejectJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reject"
        android:layout_below="@id/customerDetails"
        android:layout_marginTop="20dp"
        android:onClick="rejectJob"
        android:layout_alignParentRight="true"/>
    <Button
        android:id="@+id/finishJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish Job"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:onClick="finishJob"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
